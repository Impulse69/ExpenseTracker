<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome back!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:layout_marginBottom="16dp" />

    <!-- Total Expenses Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center"
            android:background="@drawable/gradient_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Expenses"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/total_expenses_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        android:weightSum="3">

        <Button
            android:id="@+id/add_expense_btn"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Add Expense"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_rounded"
            android:backgroundTint="#4CAF50"
            android:layout_marginEnd="4dp"
            android:drawableTop="@android:drawable/ic_input_add"
            android:drawablePadding="4dp" />

        <Button
            android:id="@+id/view_history_btn"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="View History"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_rounded"
            android:backgroundTint="#2196F3"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:drawableTop="@android:drawable/ic_menu_recent_history"
            android:drawablePadding="4dp" />

        <Button
            android:id="@+id/categories_btn"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Categories"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_rounded"
            android:backgroundTint="#FF9800"
            android:layout_marginStart="4dp"
            android:drawableTop="@android:drawable/ic_menu_sort_by_size"
            android:drawablePadding="4dp" />

    </LinearLayout>

    <!-- Recent Expenses Section -->
    <TextView
        android:id="@+id/recent_expenses_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent Expenses (0)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="12dp" />

    <!-- Recent Expenses RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recent_expenses_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:clipToPadding="false"
        android:paddingBottom="8dp" />

    <!-- Empty State (Optional) -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No expenses yet"
            android:textSize="18sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap 'Add Expense' to get started"
            android:textSize="14sp"
            android:textColor="#999999" />

    </LinearLayout>

</LinearLayout>